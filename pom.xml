<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
						http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>me.thelunarfrog</groupId>
	<artifactId>LagMeter</artifactId>
	<version>1.12.0-SNAPSHOT</version>

	<!-- Build Settings -->
	<build>
		<resources>
			<!--Main -->
			<resource>
				<targetPath>main/java/com/webkonsept/minecraft/lagmeter</targetPath>
				<filtering>false</filtering>
				<directory>${basedir}/src/main/java/com/webkonsept/minecraft/lagmeter
				</directory>
			</resource>
			<!--settings.yml -->
			<resource>
				<targetPath>main/resources</targetPath>
				<filtering>false</filtering>
				<directory>${basedir}/src/main/resources</directory>
				<includes>
					<include>settings.yml</include>
				</includes>
				<excludes>
				</excludes>
			</resource>
			<!--plugin.yml -->
			<resource>
				<targetPath></targetPath>
				<filtering>false</filtering>
				<directory>${basedir}/src/main/resources</directory>
				<includes>
					<include>plugin.yml</include>
				</includes>
				<excludes>
				</excludes>
			</resource>
		</resources>
	</build>

	<dependencies>
		<!--Bukkit -->
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>bukkit</artifactId>
			<version>1.4.2-R0.2</version>
			<type>jar</type>
		</dependency>
		<!--Vault - Optional -->
		<dependency>
			<groupId>net.milkbowl.vault</groupId>
			<artifactId>Vault</artifactId>
			<version>1.2.22-SNAPSHOT</version>
			<type>jar</type>
			<optional>true</optional>
		</dependency>
		<dependency>
            <groupId>net.citizensnpcs</groupId>
            <artifactId>citizensapi</artifactId>
            <version>2.0.4-SNAPSHOT</version>
        </dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>bukkit-repo</id>
			<url>http://repo.bukkit.org/content/groups/public</url>
		</repository>
		<repository>
			<id>citizensapi-repo</id>
			<url>http://ci.citizensnpcs.com/plugin/repository/everything</url>
		</repository>
		<repository>
			<id>vault-repo</id>
			<url>http://ci.herocraftonline.com/plugin/repository/everything</url>
		</repository>
	</repositories>

	<!-- More Project Information -->
	<name>LagMeter</name>
	<description>A lag and memory usage meter Minecraft Bukkit servers.
	</description>
	<url>http://mc.grminecraft.org:8080/jenkins/job/LagMeter/</url>
	<inceptionYear>2011</inceptionYear>
</project>